{
  "background": {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon128.png"
    },
    "default_popup": "html/popup.html"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "30",
  "name": "bilibili-downloader",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["js/content.js"],
      "matches": ["*://*.bilibili.com/video/av*", "*://*.bilibili.com/*/play*"]
    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "version": "1.0.0",
  "web_accessible_resources": []
}
