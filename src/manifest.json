{
  "background": {
    "page": "##[html]background##"
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon128.png"
    },
    "default_popup": "##[html]popup##"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "name": "##[config]name##",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["##[js]content##"],
      "matches": ["*://*.bilibili.com/video/av*", "*://*.bilibili.com/*/play*"]
    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "version": "##[config]version##",
  "web_accessible_resources": []
}
