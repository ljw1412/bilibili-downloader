{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["chrome", "jquery", "file-saver"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/manifest.json"],
  "exclude": ["node_modules"]
}
